<UserControl x:Class="ThisIsEatApp.UserControls.MyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ThisIsEatApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="PaleGoldenrod"
                x:Name="BOne"
                BorderThickness="1"
                Width="250"
                Height="245"
                CornerRadius="16">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <Button Content="Task 1"
                        FontSize="16"
                        Width="70"
                        Height="50"
                        BorderThickness="{Binding ElementName=BOne, Path=BorderThickness}"
                        BorderBrush="{Binding ElementName=BOne, Path=BorderBrush}"/>
            </StackPanel>
        </Border>  
    </Grid>
</UserControl>
